<p style="color: green"><%= notice %></p>

<h1>People</h1>

<table>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td>
          <%= link_to "Show", person_path(person) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New person", new_person_path %>
